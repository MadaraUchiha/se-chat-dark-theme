{
	"name": "SO Dark Chat +",
	"description": "Provides a new dark theme for stackoverflow chat",
	"version": "0.0.3.0",
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches" : ["http://chat.stackoverflow.com/*","https://chat.stackoverflow.com/*","http://chat.stackexchange.com/*","https://chat.stackexchange.com/*"],
			"js": ["script.js"],
			"css": ["style.css"]
		}
	],
	"icons": {
		"128": "img/icon_128.png"
	},
	"permissions": [
     	"storage"
    ],
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}